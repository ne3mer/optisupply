{
  "version": 2,
  "builds": [
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    },
    {
      "src": "ethicsupply/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "ethicsupply/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "ethicsupply.settings",
    "SECRET_KEY": "${SECRET_KEY}",
    "ALLOWED_HOSTS": ".vercel.app"
  },
  "outputDirectory": "staticfiles"
}
